{
  "contentTypes": {
    "posts": {
      "kind": "collectionType",
      "collectionName": "posts",
      "info": {
        "singularName": "post",
        "pluralName": "posts",
        "displayName": "Post",
        "description": "Blog posts for the website"
      },
      "options": {
        "draftAndPublish": true
      },
      "pluginOptions": {},
      "attributes": {
        "title": {
          "type": "string",
          "required": true,
          "maxLength": 255
        },
        "slug": {
          "type": "uid",
          "targetField": "title",
          "required": true
        },
        "content": {
          "type": "richtext",
          "required": true
        },
        "excerpt": {
          "type": "text",
          "maxLength": 500
        },
        "featured_image": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "meta_description": {
          "type": "string",
          "maxLength": 160
        },
        "meta_keywords": {
          "type": "string",
          "maxLength": 255
        },
        "category": {
          "type": "string",
          "default": "Général"
        },
        "readTime": {
          "type": "string",
          "default": "5 min"
        },
        "author": {
          "type": "relation",
          "relation": "manyToOne",
          "target": "plugin::users-permissions.user",
          "inversedBy": "posts"
        }
      }
    },
    "pages": {
      "kind": "collectionType",
      "collectionName": "pages",
      "info": {
        "singularName": "page",
        "pluralName": "pages",
        "displayName": "Page",
        "description": "Static pages for the website"
      },
      "options": {
        "draftAndPublish": true
      },
      "pluginOptions": {},
      "attributes": {
        "title": {
          "type": "string",
          "required": true,
          "maxLength": 255
        },
        "slug": {
          "type": "uid",
          "targetField": "title",
          "required": true
        },
        "content": {
          "type": "richtext",
          "required": true
        },
        "featured_image": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "meta_description": {
          "type": "string",
          "maxLength": 160
        },
        "meta_keywords": {
          "type": "string",
          "maxLength": 255
        },
        "author": {
          "type": "relation",
          "relation": "manyToOne",
          "target": "plugin::users-permissions.user",
          "inversedBy": "pages"
        }
      }
    }
  },
  "permissions": {
    "public": {
      "posts": ["find", "findOne"],
      "pages": ["find", "findOne"],
      "upload": ["find", "findOne"]
    }
  }
}